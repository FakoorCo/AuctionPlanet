@model AuctionPlanet.WebPresentation.Models.LotViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>LotViewModel</h4>
    <hr/>
    <img alt="@Model.Title" src="@Model.ImageUrl" />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.StartTime)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StartTime)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Duration)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Duration)
        </dd>

        <dt>
            Time left
        </dt>

        <dd>
            @{
                string timeLeft = "";

                if (Model.StartTime != null)
                {
                    timeLeft = (Model.StartTime.Value.Add(Model.Duration) - DateTime.Now).ToString();
                }
            }
            @Html.DisplayFor(modelItem => timeLeft)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.StartPrice)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StartPrice)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CurrentPrice)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CurrentPrice)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.OriginalOwner)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OriginalOwner)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CurrentBidder)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CurrentBidder)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>

    </dl>
</div>
<p>
    <ul>
        @if (User.IsInRole("admin"))
        {
            <li>
                @Html.ActionLink("Approve", "Approve", new { id = Model.Id })
            </li>
        }
        <li>@Html.ActionLink("Bid", "Bid", new { id = Model.Id })</li>
        <li>@Html.ActionLink("Back to List", "Index")</li>
    </ul>
</p>
